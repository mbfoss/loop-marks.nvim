{
    "luahelper.base.lsp": "socket rpc",
    "Lua.runtime.version": "LuaJIT",
    "Lua.runtime.path": [
        "?.lua",
        "?/init.lua"
    ],
    // If you really need to teach the language server about Neovim's runtime Lua files
    // (only useful if you write Neovim config/plugins in VS Code)
    "Lua.workspace.library": [
        "~/homebrew/share/nvim/runtime/lua",
        "~/homebrew/share/nvim/runtime/lua/vim",
        "~/homebrew/share/nvim/runtime/lua/vim/lsp",
        "/Users/Dev/.config/nvim/pack/plugins/opt/loop.nvim/lua",
        // add more specific folders if needed, or leave empty if not editing Neovim Lua
    ],
    // Nice-to-haves (very common & recommended settings)
    "Lua.codeLens.enable": true,
    "Lua.completion.callSnippet": "Both",
    // Optional but useful for most people
    "Lua.diagnostics.enable": true,
    "Lua.diagnostics.globals": [
        "vim"
    ], // only if writing Neovim Lua config
    "Lua.hint.enable": true,
    "Lua.hint.arrayIndex": "Enable",
    "Lua.telemetry.enable": false,
    "chat.disableAIFeatures": true,
    "[lua]": {
        "editor.defaultFormatter": "sumneko.lua"
    } // many people turn this off
}